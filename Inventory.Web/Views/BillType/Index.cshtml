@using Inventory.Repositories.Paging;
@using Inventory.ViewModels.BillVM;
@model PaginatedList<BillTypeListViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class=" row text-bg-light p-3">

		<div class="col-6">
			Add New Bill Type
			<a asp-action="Create" class="btn btn-outline-dark">Add</a>
	</div>
    <div class="col-6">Search Here....</div>
	
</div>
<div class="row pt-4" >
	<table class="table table-striped  text-center ">
		<thead class="table-secondary">
			<tr>
				<th>
					Bill-Type Id
				</th>
				<th>
					Title
				</th>
				<th>
					Description
				</th>

				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var billType in Model)
			{
				<tr>
					<td>@billType.BillTypeId</td>
					<td>@billType.BillTypeName</td>
					<td>@billType.Description</td>
					<td>
						 <div class="w-75 btn btn-group " role="group">
							<a  asp-action="Edit" asp-route-id="@billType.BillTypeId" class="btn btn-outline-dark mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a  asp-action="Delete" asp-route-id="@billType.BillTypeId" class="btn btn-outline-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a> 
						</div> 
					</td>
				</tr>
			}
		</tbody>


	</table>
</div>