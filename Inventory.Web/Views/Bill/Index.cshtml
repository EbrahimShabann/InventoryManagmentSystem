@using Inventory.Repositories.Paging;
@using Inventory.ViewModels.BillVM;
@model PaginatedList<BillListViewModel>
@{
	ViewData["Title"] = "Index";
}

<div class=" row text-bg-light p-3">

	<div class="col-6">
		Add New Bill 
		<a asp-action="Create" class="btn btn-outline-dark">Add</a>
	</div>
	<div class="col-6">Search Here....</div>

</div>
<div class="row pt-4">
	<table class="table table-striped  text-center ">
		<thead class="table-secondary">
			<tr>
				<th>
					Bill-Number
				</th>
				<th>
					GRN
				</th>
				<th>
					Vendor Delivery Order
				</th>

				<th>
					Vendor Bill
				</th>
				<th>
					Bill Date
				</th>
				<th>
					Bill Due Date
				</th>
				
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var bill in Model)
			{
				<tr>
					<td>@bill.BillName</td>
					<td>@bill.GoodsReceivedNoteId</td>
					<td>@bill.VendorDoNumber</td>
					<td>@bill.VendorInvoiceNumber</td>
					<td>@bill.BillDate</td>
					<td>@bill.BillDueDate</td>
					
					<td>
						<div class="w-75 btn btn-group " role="group">
							<a asp-action="Edit" asp-route-id="@bill.BillId" class="btn btn-outline-dark mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-action="Delete" asp-route-id="@bill.BillId" class="btn btn-outline-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>


	</table>
</div>