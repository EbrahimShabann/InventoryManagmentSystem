@model IEnumerable<Inventory.ViewModels.SalesTypeVM.SalesTypeListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Sales Types</h1>
<div class="row">
    <div calss="col-6">
        <p>
            Add SalesType
        </p>
    </div> 
    <div calss="col-12">
        <p>
            <a asp-action="Create" class="btn btn-outline-dark">Add </a>
        </p>
    </div>
   
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalesTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.SalesTypeId">Edit</a> |
                
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.SalesTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
